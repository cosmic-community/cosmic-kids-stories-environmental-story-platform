<header class="bg-white/80 backdrop-blur-md border-b border-green-100 sticky top-0 z-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo and Brand -->
      <a href="/" class="flex items-center space-x-3 group">
        <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-blue-600 rounded-full flex items-center justify-center group-hover:scale-105 transition-transform">
          <span class="text-white text-xl font-bold">üåç</span>
        </div>
        <div class="hidden sm:block">
          <h1 class="text-xl font-bold text-gray-900">Cosmic Kids Stories</h1>
          <p class="text-xs text-gray-500">Eco-Conscious Adventures</p>
        </div>
      </a>
      
      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-700 hover:text-green-600 font-medium transition-colors">
          Stories
        </a>
        <a href="/age-groups" class="text-gray-700 hover:text-green-600 font-medium transition-colors">
          Age Groups
        </a>
        <a href="/themes" class="text-gray-700 hover:text-green-600 font-medium transition-colors">
          Themes
        </a>
      </nav>
      
      <!-- Mobile Menu Button -->
      <button type="button" class="md:hidden p-2 rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900 transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
</header>