---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import StoryCard from '@/components/StoryCard.astro';
import CosmicBadge from '@/components/CosmicBadge.astro';
import { getAllAgeGroups, getStoriesByAgeGroup } from '@/lib/cosmic';
import type { AgeGroup, Story } from '@/types';

export async function getStaticPaths() {
  const ageGroups = await getAllAgeGroups();
  
  const paths = await Promise.all(
    ageGroups.map(async (ageGroup) => {
      const stories = await getStoriesByAgeGroup(ageGroup.id);
      return {
        params: { slug: ageGroup.slug },
        props: { ageGroup, stories },
      };
    })
  );
  
  return paths;
}

export interface Props {
  ageGroup: AgeGroup;
  stories: Story[];
}

const { ageGroup, stories } = Astro.props;

// Access environment variable on server side
const bucketSlug = import.meta.env.COSMIC_BUCKET_SLUG;
