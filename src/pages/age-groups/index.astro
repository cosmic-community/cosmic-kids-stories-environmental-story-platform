---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import CosmicBadge from '@/components/CosmicBadge.astro';
import { getAllAgeGroups, getStoriesByAgeGroup } from '@/lib/cosmic';

const ageGroups = await getAllAgeGroups();

// Get story counts for each age group
const ageGroupsWithCounts = await Promise.all(
  ageGroups.map(async (ageGroup) => {
    const stories = await getStoriesByAgeGroup(ageGroup.id);
    return {
      ...ageGroup,
      storyCount: stories.length
    };
  })
);

// Access environment variable on server side
const bucketSlug = import.meta.env.COSMIC_BUCKET_SLUG;
---

<Layout 
  title="Age Groups - Cosmic Kids Stories"
  description="Find the perfect environmental stories for your child's reading level. Browse stories by age groups from preschoolers to elementary students."
>
  <Header />
  
  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Page Header -->
    <div class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
        Stories by 
        <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
          Age Group
        </span>
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Find the perfect environmental adventure for your young reader. Our stories are carefully crafted 
        for different age groups and reading levels.
      </p>
    </div>

    <!-- Age Groups Grid -->
    {ageGroupsWithCounts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {ageGroupsWithCounts.map((ageGroup) => (
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden group">
            <!-- Age Group Icon -->
            <div class="bg-gradient-to-br from-blue-100 to-purple-100 p-8 text-center">
              <div class="text-6xl mb-4">
                {ageGroup.metadata?.reading_level?.value === 'Beginner' && 'ðŸŒ±'}
                {ageGroup.metadata?.reading_level?.value === 'Intermediate' && 'ðŸŒ¿'}
                {ageGroup.metadata?.reading_level?.value === 'Advanced' && 'ðŸŒ³'}
              </div>
              <h2 class="text-2xl font-bold text-gray-900 mb-2">{ageGroup.title}</h2>
              <p class="text-blue-600 font-semibold mb-2">
                {ageGroup.metadata?.reading_level?.value} Level
              </p>
              <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white/80 text-gray-700">
                ðŸ“š {ageGroup.storyCount} {ageGroup.storyCount === 1 ? 'story' : 'stories'}
              </div>
            </div>
            
            <!-- Age Group Content -->
            <div class="p-6">
              {ageGroup.metadata?.age_range && (
                <div class="flex items-center gap-2 mb-4">
                  <span class="text-sm font-medium text-gray-500">Age Range:</span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    {ageGroup.metadata.age_range}
                  </span>
                </div>
              )}
              
              {ageGroup.metadata?.description && (
                <p class="text-gray-600 mb-6 leading-relaxed">
                  {ageGroup.metadata.description}
                </p>
              )}
              
              <div class="flex gap-3">
                <a 
                  href={`/age-groups/${ageGroup.slug}`}
                  class="flex-1 inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 transition-all duration-200 transform hover:scale-105"
                >
                  View Stories
                  <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center py-16">
        <div class="text-8xl mb-6">ðŸ‘¶</div>
        <h2 class="text-3xl font-bold text-gray-900 mb-4">No age groups yet!</h2>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Age groups will be available soon to help you find the perfect stories for your young readers.
        </p>
      </div>
    )}

    <!-- Reading Level Guide -->
    <section class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-2xl p-8 mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Understanding Reading Levels</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg p-6 text-center">
          <div class="text-4xl mb-3">ðŸŒ±</div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Beginner</h3>
          <p class="text-gray-600 text-sm">
            Simple vocabulary, short sentences, and clear illustrations help young readers follow along easily.
          </p>
        </div>
        <div class="bg-white rounded-lg p-6 text-center">
          <div class="text-4xl mb-3">ðŸŒ¿</div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Intermediate</h3>
          <p class="text-gray-600 text-sm">
            More complex plots and expanded vocabulary help developing readers build confidence and skills.
          </p>
        </div>
        <div class="bg-white rounded-lg p-6 text-center">
          <div class="text-4xl mb-3">ðŸŒ³</div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Advanced</h3>
          <p class="text-gray-600 text-sm">
            Chapter-style stories with sophisticated themes encourage critical thinking and deeper learning.
          </p>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <div class="text-center">
      <a 
        href="/"
        class="inline-flex items-center px-6 py-3 border-2 border-blue-500 text-base font-medium rounded-lg text-blue-700 bg-white hover:bg-blue-50 transition-colors duration-200"
      >
        <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Home
      </a>
    </div>
  </main>

  <!-- Cosmic Badge -->
  <CosmicBadge bucketSlug={bucketSlug} />
</Layout>